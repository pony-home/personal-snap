        .input-group
        span#career-8-sp.input-group-text.col-sm-2 Note
        textarea#career-8.form-control(
          aria-describedby="career-8" 
          cols="33" 
          rows="5" 
          name="career8"
          maxlength=1100
          placeholder="Current state of things (what is your job/career path, any thoughts about changes in career, etc)"
        )
